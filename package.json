{
    "name": "typescript-goat-template",
    "version": "0.0.0",
    "description": "personal template for bootstraping TypeScript project with all my favorite tools and features",
    "main": "tsconfig-paths-bootstrap.js",
    "esModuleInterop": true,
    "type": "module",
    "scripts": {
        "lint": "eslint . --fix",
        "ts": "tsc --noEmit",
        "build": "rimraf ./dist && npx tsc",
        "prepare": "husky",
        "pretty": "prettier --plugin=prettier-plugin-organize-imports --write .",
        "test": "vitest --config .bin/vitest/vitest.config.ts"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@eslint/eslintrc": "^3.2.0",
        "@eslint/js": "^9.17.0",
        "@tsconfig/recommended": "^1.0.8",
        "@types/node": "^20.17.7",
        "@typescript-eslint/eslint-plugin": "^8.15.0",
        "@typescript-eslint/parser": "^8.19.0",
        "@vitest/coverage-v8": "^3.0.5",
        "eslint": "^9.17.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.2.10",
        "prettier": "3.2.5",
        "prettier-plugin-organize-imports": "^3.2.4",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.19.0",
        "vitest": "^3.0.5"
    },
    "dependencies": {},
    "lint-staged": {
        "*.{ts,js}": [
            "eslint --fix",
            "prettier --write",
            "bash -c 'npm run ts'"
        ]
    }
}
